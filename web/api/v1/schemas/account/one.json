{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",

  "properties": {
    "user": {
      "type": "object",

      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },

        "lastname": {
          "type": "string"
        },

        "firstname": {
          "type": "string"
        }
      },

      "required": [
        "email",
        "lastname",
        "firstname"
      ]
    },

    "token": {
      "type": "string"
    }
  },

  "required": [
    "user",
    "token"
  ]
}
