{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",

  "properties": {
    "data": {
      "type": "object",

      "properties": {
        "title": {
          "type": "string"
        },

        "content": {
          "type": "string"
        },

        "viewsCount": {
          "type": "integer"
        },

        "isActive": {
          "type": "boolean"
        },

        "createdAt": {
          "type": "string",
          "format": "date-time"
        },

        "links": {
          "type": "object",

          "properties": {
            "expert": {
              "type": "string"
            }
          },

          "additionalProperties": false,

          "required": [
            "expert"
          ]
        }
      },

      "additionalProperties": false,

      "required": [
        "title",
        "content",
        "viewsCount",
        "isActive",
        "createdAt",
        "links"
      ]
    }
  },

  "required": [
    "data"
  ]
}