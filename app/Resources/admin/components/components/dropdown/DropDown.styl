.DropDown
  border-radius 3px
  padding 5px
  box-shadow 3px 3px 0 rgba(12,12,12,0.03)

  position absolute
  top 100%
  left 0
  z-index 1000
  float left
  min-width 160px
  margin 2px 0 0
  list-style none
  font-size 14px
  background-color #fff
  border 1px solid rgba(0,0,0,.15)
  background-clip padding-box

  &-Header
    background #1d2939
    min-width 200px
      
    border 0
    margin-top 0px
    margin-right -1px
    border-radius 2px 0 2px 2px
    box-shadow 3px 3px 0 rgba(12,12,12,0.05)
    padding 5px
    
    &:after
      border-bottom 6px solid #1d2939
      border-left 6px solid transparent
      border-right 6px solid transparent
      content ""
      display inline-block
      right 95px
      position absolute
      top -6px

  &-Right
    right 0
    left auto
