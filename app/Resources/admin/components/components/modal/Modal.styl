.Modal
  position absolute
  top 200px
  left 50%
  width 650px
  margin-left -325px
  border 1px solid #cdcdcd
  padding 20px
  background white
  z-index 1000

  .ModalTitle
    margin-bottom 15px
    line-height 1
    font-family "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
    font-size 16px

  .ModalClose
    position absolute
    top 8px
    right 8px
    width 15px
    height 15px
    background url('../img/icons-s314e2dbd02.png') 0 -2340px no-repeat
    border none
    outline none
    cursor pointer

  .ModalClose:hover
    background url('../img/icons-s314e2dbd02.png') 0 -2315px no-repeat

  .ModalBody
    .field_mod_middle
      margin-bottom 10px

    .enter
      border 0px
      padding-bottom 0px

    font-size 14px