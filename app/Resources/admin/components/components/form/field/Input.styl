.Input
  .InputElement
    display block
    width 100%
    height auto
    padding 10px
    font-size 13px
    line-height 1.428571429
    color #555
    background-color #fff
    background-image none
    border 1px solid #ccc
    border-radius 3px
    transition border-color ease-in-out .15s,box-shadow ease-in-out .15s

    &:focus
      outline 0
      border-color #999
      box-shadow 3px 3px 0 rgba(12,12,12,0.05)
