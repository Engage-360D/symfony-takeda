.Navigation
  float left
  width 210px
  height 100%
  padding 5px 15px
  background #1d2939

  .NavigationTitle
    font-size 11px
    text-transform uppercase
    color #999
    margin-bottom 10px

  a
    color #8f939e
    padding 7px 10px
    -webkit-border-radius 3px
    border-radius 3px
    position relative
    display block
    text-decoration none
    
    &:hover
      background-color #fff
      color #1d2939
      box-shadow 0 3px 0 rgba(0,0,0,0.2)
