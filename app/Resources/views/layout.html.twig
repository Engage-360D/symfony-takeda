{% extends "base.html.twig" %}

{% block body %}
<!-- wrapper-->
<div class="wrapper">
	<!-- aside -->
	<div class="aside">
		<!-- logo -->
		<div class="logo">
		  <a href="/">
			  <p class="logo__pic"></p>
			</a>
		</div>
		<!-- nav -->
		<nav class="nav">
			<ul>
				<li class="nav__cabina {% if app.request.attributes.get('_route') == 'engage360d_takeda_user_account' %}is-active{% endif %}"><a href="{{ path('engage360d_takeda_user_account') }}"><span>Личный кабинет</span><i></i></a></li>
				{% for menu in takeda_menu("Главное меню") %}
			    <li class="{% if app.request.requestUri == takeda_menu_url(menu) %}is-active{% endif %}">
			      <a href="{{ takeda_menu_url(menu) }}">
			        <span>{{ menu.name|e }}</span>
			        <i></i>
			      </a>
			     </li>
			  {% endfor %}
			</ul>
		</nav>
		<!-- search-form -->
		<div class="search-form">
			<input type="text" placeholder="Поиск">
			<button><i></i></button>
		</div>
		<!-- links -->
		<ul class="links">
			<li><a href="/category/about">О компании</a></li>
			<li><a href="/category/about/contacts">Контакты</a></li>
		</ul>
		<!-- app -->
		<div class="link-app">
			<a href="#">
				<span>Мобильное приложение</span>
				<i></i>
			</a>
		</div>
		<!-- social -->
		<ul class="social">
		  <li data-react-component="VkontakteButton" data-reload-on-success="true"/>
		  <li data-react-component="FacebookButton" data-reload-on-success="true"/>
		  <li data-react-component="OdnoklassnikiButton" data-reload-on-success="true"/>
		</ul>
		<!-- subscribe -->
		<div class="subscribe">
			<label>
				<input type="text" placeholder="Подписка на обновления">
				<i></i>
			</label>
		</div>
		<!-- footer -->
		<footer class="footer">
			<div class="footer__info">Имеются противопоказания. Необходимо ознакомиться с инструкцией или проконсуль- тироватся со специалистом.</div>
			<a class="takeda" href="#"></a>
			<div class="copyright">© 2013 Takeda</div>
		</footer>
	</div>
	<!-- section -->
	<div class="section">
		{% block content %}{% endblock %}
	</div>
</div>
{% endblock %}