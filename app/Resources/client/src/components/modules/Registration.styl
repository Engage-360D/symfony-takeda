.data__row_registration
  .data__label
    padding 6px 345px 0 0

  .data__content
    width 330px

  .field__in
    width 330px

    input
      padding 0 10px
      font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
      font-size 14px
      text-align left

.field__in_invalid
  input
    border-color #ff0000

.registration-container
  width 680px
  padding 50px
  min-width 680px
  overflow hidden

input[type='number']
  -moz-appearance textfield

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
  -webkit-appearance none

.mainspec__item
  &.mainspec__date
    .field__in
      width 120px

.ChangePassword
  .enter
    border 0px
