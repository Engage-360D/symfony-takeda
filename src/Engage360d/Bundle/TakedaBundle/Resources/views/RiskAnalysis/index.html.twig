{% extends "Engage360dTakedaBundle::layout.html.twig" %}

{% block title %}Анализ рисков{% endblock %}

{% block section %}
<div class="container">
  <!-- head -->
  <div class="head">
    <div class="head__right">
      <div class="head__city">
        {% include "Engage360dTakedaBundle::geo_ip_city.html.twig" %}
      </div>
      {% if app.user %}
      <div class="head__out">
        <a href="/sign-out">Выход</a>
      </div>
      {% endif %}
    </div>
    <div class="head__left">
      <!-- h -->
      <div class="h">Анализ риска</div>
    </div>
  </div>
  <div id="RiskAnalysis"></div>
</div>
{% endblock %}

{% block scripts %}
<script>
  takeda.render(takeda.RiskAnalysis, 'RiskAnalysis', {
    geoIPCity: {{ geo_ip_city | serialize | raw }},
    regions: {{ regions | serialize | raw }},
    user: {{ user | serialize | raw }}
  });
</script>
{% endblock %}
