{% block content %}
<!-- main -->
<div class="main">
	<div class="main__nav">
		<div class="main__nav-in">
			<i></i>
			<ul>
				<li><button class="is-active"></button></li>
				<li><button></button></li>
				<li><button></button></li>
			</ul>
		</div>
	</div>
	<div class="main__blocks">
