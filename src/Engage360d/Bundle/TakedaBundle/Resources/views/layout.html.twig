    </div>
    <!-- links -->
    <ul class="links">
      <li><a href="#">О компании</a></li>
      <li><a href="#">Контакты</a></li>
    </ul>
    <!-- app -->
    <ul class="links-app">
      <li><a href="#"><span>IPhone</span><i class="icon icon-os-ios"></i></a></li>
      <li><a href="#"><span>Android</span><i class="icon icon-os-android"></i></a></li>
