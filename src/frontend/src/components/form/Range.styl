.range__val a
  position absolute
  width 28px
  height 28px
  margin-left -14px
  background #2269c8
  border-radius 50%
  line-height 27px
  text-align center
  color white
  cursor pointer
  user-select none
  z-index 2

.range__val a.touch
  margin-top -50px
  margin-left -25px
  width 50px
  height 50px
  font-size 25px
  line-height 50px

.range__min_allowed
  position absolute
  left -35px

.range__min_allowed span
  display block;
  height 18px;
  line-height 18px;
  position relative;
  left -50%;

.range__min_allowed i
  display block
  width 1px;
  height 4px;
  background #000;

.range__min_allowed i:after
  content ""
  position absolute;
  bottom -1px;
  width 100%;
  height 1px;
  background #000