@import "selectize/dist/css/selectize.css"

.selectize-input
  height 27px
  padding 0 10px
  border 1px solid #c6c7c8
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-size 14px
  border-radius 0px
  box-shadow none
  
  position relative
  height 27px
  padding 0 30px 0 10px
  border 1px solid #424549
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-size 14px
  line-height 25px
  cursor pointer
  box-sizing border-box

  &:hover
    border-color #2269c8

  &.focus
    border-color #2269c8
    box-shadow none !important
    border-radius 0px

  .item
    line-height 26px

.selectize-control.single .selectize-input
  &:after
    right 7px !important
    border-width 0px

    position absolute
    top 13px
    right 7px

    background url("../img/icons/select-arrow.png") no-repeat
    width 14px
    height 8px

  &:hover
    &:after
      background url("../img/icons/select-arrow-blue.png") no-repeat

  &.focus
    &:after
      border-width 0px
      background url("../img/icons/calendar-up-hover.png") no-repeat

.selectize-dropdown
  margin-top 0px
  box-shadow none
  border solid #424549
  border-width 0px 1px 1px 1px
  border-radius 0px

.field__in_invalid
  .selectize-input
    border-color #ff0000
  